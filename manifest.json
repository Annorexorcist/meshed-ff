{
  "name": "meshed",
  "description": "Visual extension for Glimesh, Firefox version",
  "version": "0.0.2ff",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://glimesh.tv/*"],
      "js": ["jquery.js", "app.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    "index.html",
    "style.css",
    "app.js"
  ],
  "background": {
    "scripts": ["jquery.js"]
  },
  "permissions": [
    "http://fonts.googleapis.com/",
    "https://fonts.googleapis.com/"
  ]
}
